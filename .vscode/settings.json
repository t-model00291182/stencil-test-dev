{
    "[typescript][typescriptreact][javascript][javascriptreact][scss]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit",
            "source.fixAll.stylelint": "explicit"
        },
        // Do not use Prettier (default defined on line 6) but Prettier ESlint (defined above) when saving
        // Prettier is included in eslint. So upon saving (source.fixAll.eslint) Prettier is run at last to apply formatting.
        "editor.formatOnSave": false
    },
    "stylelint.validate": [
        "css",
        "scss"
    ],
}